{
  "extends": "@favware/ts-config",
  "compilerOptions": {
    "target": "ES2019",
    "downlevelIteration": true,
    "importHelpers": false,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.tsx", "**/*.test.ts"],
  "typedocOptions": {
    "out": "./docs/",
    "readme": "./README.md",
    "name": "RWS-NL AIR Node Packages",
    "exclude": [
      "**/node_modules/**",
      "**/dist/**",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.test.js",
      "**/*.test.jsx",
      "**/*.js",
      "packages/cra-template-air/**/*",
      "packages/local-components-test/**/*",
      "scripts/*"
    ],
    "mode": "modules",
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeNotExported": true,
    "lernaExclude": ["cra-template-air", "@rws-air/local-components-test"]
  }
}
