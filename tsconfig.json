{
  "extends": "@favware/ts-config",
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "downlevelIteration": true,
    "incremental": false
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.test.ts"
  ],
  "typedocOptions": {
    "out": "./docs/",
    "readme": "./README.md",
    "name": "RWS-NL AIR Node Packages",
    "exclude": [
      "**/node_modules/**",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.js"
    ],
    "mode": "modules",
    "lernaExclude": [
      "local-components-test"
    ],
    "pathExclude": [
      "scripts/duplicateESLintConfig",
      "scripts/duplicateStylelintConfig",
      "scripts/validateNoOnly",
      "scripts/yarnAfterPull"
    ],
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeNotExported": true
  }
}