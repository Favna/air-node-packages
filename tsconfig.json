{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "typedocOptions": {
    "out": "./docs/",
    "readme": "./README.md",
    "name": "RWS-NL AIR Node Packages",
    "exclude": [
      "**/node_modules/**",
      "**/*.test.ts",
      "**/*.js"
    ],
    "mode": "modules",
    "lernaExclude": [
      "local-components-test"
    ],
    "pathExclude": [
      "scripts/duplicateESLintConfig",
      "scripts/duplicateStylelintConfig",
      "scripts/validateNoOnly"
    ],
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeNotExported": true
  }
}