{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "src",
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "downlevelIteration": true,
    "declaration": false,
    "jsx": "react",
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowJs": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/__tests__",
    "src/setupTests.ts"
  ]
}
